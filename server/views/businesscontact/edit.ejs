<%- include('../Partials/header.ejs'); %>
<div class="wrapper-container">
    <%- include('../Partials/navbar.ejs'); %>
    <div class="row">
        <div class="offset-md-2 col-md-8">
            <h1>Edit Contact<br>
    
            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField" >Contact Name:</label>
                    <input type="text" class="form-control" id="nameTextField" placeholder="Enter contact name" name="name"
                        value=<%=contacts.name %>
                    required>
                </div>
    
                <div class="form-group">
                    <label for="nameTextField" >Contact Number:</label>
                    <input type="text" class="form-control " id="numberTextField" placeholder="Enter contact number"
                        value=<%=contacts.number %>
                    name="number"
    
                    required>
                </div>
    
                <div class="form-group">
                    <label for="nameTextField" >Email Address:</label>
                    <input type="text" class="form-control " id="emailTextField" placeholder="Enter email address" name="email"
                        value=<%=contacts.email %>
                    required>
                </div>
    
                <button class="btn btn-primary " type="submit">Update</button>
                <a href="/contacts" class="btn btn-secondary ">Cancel</a>
                <a href="/contacts/delete<%= contacts.id %>" class="btn btn-danger">Delete</a>
            </form>
        </div>
    </div>
</div> 
<%- include('../Partials/footer.ejs'); %>